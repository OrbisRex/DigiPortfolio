{# Settings template #}
{% extends 'base.html.twig' %}

{% block title %}DigiPortfolio | Settings - Set{% endblock %}

{% block body %}
    <section id="top" class="main">
        <div class="wide-envelop">
            {% if set %}
                <h1>{{ set.name }}</h1>
            {% else %}
                <h1>New set</h1>
            {% endif %}

            {# Form to create or edit item. #}
            {{ form_start(form) }}
                {{ form_errors(form) }}
                {{ form_row(form.type) }}
                {{ form_row(form.name) }}
                <div class="wide">
                    {{ form_row(form.save) }}
                </div>
            {{ form_end(form) }}

            {# List of registered people #}
            <h2>Who is in?</h2>
            {% if set %}
                {% for person in set.people %}
                    <p>{{ person.name }}</p>
                {% endfor %}
            {% else %}
                {# TODO: Add form to add new participants. #}
                <p class='info'>No people found. Add some!</p>
            {% endif %}
        </div>
    </section>

    <section id="navigation">
        <span class="button"><a href="{{ path('settings') }}#set" title="Settings">&lt;</a></span>
        <span class="button warning"><a href="{{ path('app_logout')}}">Log Out</a></span>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
